@model SmartChat.Web.Views.viewModle.LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}
<div class="login-box">
  <div class="login-logo">
    <b>Smart</b>Chat
  </div>

  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      <form asp-action="Login" asp-controller="Auth" method="post">
        @Html.AntiForgeryToken()

        <div class="input-group mb-3">
          <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="Email" />
          <div class="input-group-text">
            <span class="fas fa-user"></span>
          </div>
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>

        <div class="input-group mb-3">
          <input asp-for="Password" class="form-control" type="password" placeholder="Password" autocomplete="current-password" />
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>

        <div class="row">
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block w-100">Sign In</button>
          </div>
        </div>
      </form>

      <p class="mb-0 mt-3">
        <a asp-action="Register" asp-controller="Auth" class="text-center">Register a new membership</a>
      </p>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}