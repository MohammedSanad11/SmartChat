@model SmartChat.Web.Views.viewModle.RegisterViewModel
@using SmartChat.Application.Dtos.Users

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Create Account</h3>

                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                       </di>
                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="mb-3">
                            <label asp-for="RoleId" class="form-label"></label>
                            <select asp-for="RoleId" class="form-select" required>
                                <option value="">Select Role</option>
                                @if (Model.Roles != null && Model.Roles.Any())
                                {
                                    @foreach (var role in Model.Roles)
                                    {
                                        <option value="@role.Id">@role.Name</option>
                                    }
                                }
                                else
                                {
                                    <option disabled>No roles available</option>
                                }
                            </select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </form>

                    <div class="mt-3 text-center">
                        <small>Already have an account? <a asp-action="Login">Login</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}