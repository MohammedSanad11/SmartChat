@model SmartChat.Application.Dtos.Dashboad.AllChatDashboardDto
@{
    Layout = "_Layout";
}

<div class="container my-4" style="margin-left: 250px;">
    <!-- عشان Sidebar ثابت -->
    <!-- ====== Summary Cards ====== -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card text-center bg-dark text-white shadow-sm">
                <div class="card-body">
                    <h6>Total Users</h6>
                    <h3>@Model.Summary.TotalUsers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center bg-primary text-white shadow-sm">
                <div class="card-body">
                    <h6>Admins</h6>
                    <h3>@Model.Summary.TotalAdmins</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center bg-success text-white shadow-sm">
                <div class="card-body">
                    <h6>Agents</h6>
                    <h3>@Model.Summary.TotalAgents</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <h6>Normal Users</h6>
                    <h3>@Model.Summary.TotalNormalUsers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center bg-info text-white shadow-sm">
                <div class="card-body">
                    <h6>Open Chats</h6>
                    <h3>@Model.Summary.TotalOpenChats</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- ====== Conversations Table ====== -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered table-dark text-white">
            <thead class="thead-dark">
                <tr>
                    <th style="width: 40%;">Title</th>
                    <th>Messages</th>
                    <th>Last Message</th>
                    <th>Sender</th>
                    <th>Created At</th>
                    <th>Last Activity</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Conversations.Any())
                {
                    foreach (var conv in Model.Conversations)
                    {
                        <tr>
                            <td class="text-truncate" style="max-width: 400px;">@conv.ConversationTitle</td>
                            <td>@conv.MessageCount</td>
                            <td class="text-truncate" style="max-width: 200px;">@conv.LastMessageText</td>
                            <td>@conv.LastMessageSenderName</td>
                            <td>@conv.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(conv.LastMessageAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-3">
                            No conversations found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- ====== Pagination ====== -->
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            @if (Model.Conversations.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link bg-primary text-white"
                       asp-action="AllConversations"
                       asp-route-pageNumber="@(Model.Conversations.PageIndex - 1)">
                        Previous
                    </a>
                </li>
            }
            <li class="page-item disabled">
                <span class="page-link bg-dark text-white">
                    Page @Model.Conversations.PageIndex of @Model.Conversations.TotalPages
                </span>
            </li>
            @if (Model.Conversations.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link bg-primary text-white"
                       asp-action="AllConversations"
                       asp-route-pageNumber="@(Model.Conversations.PageIndex + 1)">
                        Next
                    </a>
                </li>
            }
        </ul>
    </nav>

</div>