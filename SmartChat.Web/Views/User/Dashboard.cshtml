@model  SmartChat.Web.Views.viewModle.DashboardViewModel
@{

    Layout = "DashboardLayout";
}

<div class="container-fluid mt-4">

    <div class="row">

        <div class="col-lg-4 col-12 mb-3">
            <div class="card card-primary shadow">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-comments"></i> My Conversations</h3>
                </div>
                <div class="card-body">
                    @foreach(var conv in Model.MyConversations)
                    {
                        <div class="mb-2 p-2 border rounded d-flex justify-content-between align-items-center">
                            <span>@conv.ConversationTitle (@conv.MessageCount msgs)</span>
                            <a href="@Url.Action("Index", "Chat", new { conversationId = conv.ConversationId })" class="btn btn-sm btn-info">
                                Open
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-12 mb-3">
            <div class="card card-success shadow">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-plus"></i> Start New Chat</h3>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <a href="@Url.Action("create", "Conversation")" class="btn btn-primary btn-block">
                        Start New Chat
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-12 mb-3">
            <div class="card card-secondary shadow">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-user"></i> My Info</h3>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.CurrentUser.Name</p>
                    <p><strong>Role:</strong> @Model.CurrentUser.Role</p>
                    <p><strong>Conversations:</strong> @Model.CurrentUser.ConversationCount</p>
                </div>
            </div>
        </div>

    </div>

   @if (Model.CurrentUser.Role == "Admin")
{
    <div class="card card-outline card-secondary mt-4">
        <div class="card-header">
            <h3 class="card-title">All Conversations</h3>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Message Count</th>
                        <th>Last Message</th>
                        <th>Sender</th>
                        <th>Created At</th>
                        <th>Last Message At</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var conv in Model.AllConversations)
                    {
                        <tr>
                            <td>@conv.ConversationTitle</td>
                            <td>@conv.MessageCount</td>
                            <td>@conv.LastMessageText</td>
                            <td>@conv.LastMessageSenderName</td>
                            <td>@conv.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>@conv.LastMessageAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a href="@Url.Action("Index", "Chat", new { conversationId = conv.ConversationId })" class="btn btn-sm btn-primary">
                                    View Chat
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

</div>