@model List<SmartChat.Application.Dtos.Users.UserDto>

<div class="container mt-4">
    <h3>Select a user to start a conversation</h3>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No other users found.
        </div>
    }
    else
    {
        <ul class="list-group mt-3">
            @foreach (var user in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @user.UserName
                    <form asp-controller="Conversation" asp-action="Create" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="selectedUserId" value="@user.Id" />
                        <button type="submit" class="btn btn-primary btn-sm">Start Chat</button>
                    </form>
                </li>
            }
        </ul>
    }
</div>