@model List<SmartChat.Application.Dtos.Users.UserDto>
@{

    Layout = "DashboardLayout";
}


<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary shadow">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-users"></i> Start New Chat</h3>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                            <div class="alert alert-info">
                                No other users found.
                            </div>
                    }
                    else
                    {
                            <div class="list-group">
                            @foreach (var user in Model)
                            {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <img src="@Url.Content("~/imge/default-avatar.png")" class="img-circle elevation-2 mr-2" alt="User Image" width="35" height="35" />
                                                <span>@user.UserName</span>
                                            </div>

                                            <form asp-controller="Conversation" asp-action="Create" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                                <input type="hidden" name="selectedUserId" value="@user.Id" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-comment-alt"></i> Chat
                                                </button>
                                            </form>
                                        </div>
                            }
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>